<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <Switch
            android:id="@+id/switcher_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:rotation="270"/>

        <TextView
            android:id="@+id/item_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/switcher_alarm"
            android:layout_toRightOf="@id/switcher_alarm"
            android:text="@string/_00_00"
            android:textSize="35sp"/>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_delete_grey600_48dp"/>

        <TextView
            android:id="@+id/item_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:layout_toEndOf="@id/item_tv_time"
            android:layout_toLeftOf="@id/btn_delete"
            android:layout_toRightOf="@id/item_tv_time"
            android:layout_toStartOf="@id/btn_delete"
            android:gravity="center_horizontal"
            android:textSize="15sp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/item_tv_date"
            android:layout_alignLeft="@id/item_tv_date"
            android:layout_alignRight="@id/item_tv_date"
            android:layout_alignStart="@id/item_tv_date"
            android:layout_below="@id/item_tv_date">

            <TextView
                android:id="@+id/item_tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:gravity="center"
                android:textStyle="bold"
                android:scrollHorizontally="true"/>
        </ScrollView>
    </RelativeLayout>

</android.support.v7.widget.CardView>
