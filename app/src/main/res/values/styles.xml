<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
         <!--Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="MainButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlarmTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/alarmColorPrimary</item>
        <item name="colorPrimaryDark">@color/alarmColorPrimaryDark</item>
        <item name="colorPrimaryLight">@color/alarmColorPrimaryLight</item>
        <item name="colorBackground">@color/alarmColorPrimaryLight</item>
        <item name="colorAccent">@color/alarmColorAccent</item>
        <item name="colorPrimaryText">@color/alarmColorPrimaryText</item>
        <item name="colorSecondaryText">@color/alarmColorSecondaryText</item>
        <item name="colorIcons">@color/alarmColorIcons</item>
        <item name="colorDivider">@color/alarmColorDivider</item>
        <item name="android:windowBackground">@color/alarmColorBackground</item>
    </style>

</resources>
